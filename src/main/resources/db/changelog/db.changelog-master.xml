<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="20260218-1" author="vadim.aia">
        <createTable tableName="bank_account">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)" autoIncrement="true">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="20260218-2" author="vadim.aia">
        <createTable tableName="balance">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="amount" type="DECIMAL(19, 4)" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="currency" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="bank_account_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="bank_account_id"
                                 baseTableName="balance"
                                 constraintName="fk_balance_bank_account"
                                 referencedColumnNames="id"
                                 referencedTableName="bank_account"
                                 onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>